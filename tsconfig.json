{
  "include": ["./packages/**/*", "./test/**/*"],
  "exclude": ["./packages/docs/**/*"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": false,
    "declaration": true,
    "declarationMap": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": false,
    "strict": true,
    "target": "esnext",
    "emitDeclarationOnly": true,
    "verbatimModuleSyntax": false,
    "noCheck": false,
    "baseUrl": ".",
    "paths": {
      "slate-vue": ["./packages/slate-vue/index.ts"],
      "slate-history": ["./packages/slate-history/index.ts"],
      "slate-hyperscript": ["./packages/slate-hyperscript/index.ts"],
      "slate-dom": ["./packages/slate-dom/index.ts"],
      "slate": ["./packages/slate/index.ts"],
      "share-tools": ["./packages/share-tools/index.ts"],
      "@test-utils": ["./test/utils.ts"]
    }
  }
}
